@model IEnumerable<Calculator>

@{
    ViewData["Title"] = "Index";
}

<h1>Perfect Seed Calculator</h1>

<div class="container p-3">
    <div class="row p-0">
        <div class="col-9">
            <div class="d-flex align-items-center">
                <!-- Button "Add next Seed" -->
                <a asp-controller="Calculator" asp-action="AddSeed" class="btn btn-primary">
                    <i class="bi bi-database-add"></i>&nbsp; Add next Seed
                </a>

                <!-- Text box -->
                <input asp-controller="Calculator" class="form-control" style="width: 110px;" />
                <span asp-validation-controller="Calculator" class="text-danger"></span>
            </div>
            
        </div>
        <div class="col-3 text-end">
            <!-- Button "Calculate" -->
            <a asp-controller="=Calculator" asp-action="Calculate" class="btn btn-primary">
                <i class="bi bi-calculator"></i>&nbsp; Calculate
            </a>
        </div>
    </div>
    <br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <th>
            Seed Id
        </th>
        <th>
            Your Seeds
        </th>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Id
                </td>
                <td width="50%">
                    @obj.Seed
                </td>
            </tr>
        }
    </tbody>
</table>
</div>