@model Calculator

<form method="post">
    <h1>Perfect Seed Calculator</h1>
    <div class="container p-3">
        <div class="row p-0">
            <div class="col-9">
                <div class="d-flex align-items-center">
                    <!-- Button "Add next Seed" -->
                    <button type="submit" class="btn btn-primary"> Add Seed </button>
                    
                    <!-- Input box -->
                    <input asp-for="Seed" style="width: 110px" class="input-group-text">
                </div>
            </div>
            <div class="col-3 text-end">
                <!-- Button "Calculate" -->
                <button asp-controller="=Calculator" asp-action="Calculate" class="btn btn-primary">
                    <i class="bi bi-calculator"></i>&nbsp; Calculate
                </button>
            </div>
        </div>
        <br />
    </div>
</form>
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <th>
                Seed Id
            </th>
            <th>
                Your Seeds
            </th>
        </thead>
        <tbody>
       
        </tbody>
    </table>
    </div>
